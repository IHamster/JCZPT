<Window x:Class="JCZPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  
        WindowStartupLocation="Manual" 
        Topmost="True"
        WindowStyle="None"
        WindowState="Normal" Top="0" Left="0" Icon="/Images/exe.png">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"></ColumnDefinition>
            <ColumnDefinition x:Name="rightColumn" Width="0"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Name="LeftPanel" Grid.Column="0"/>
        <Grid Name="RightPanel" Grid.Column="1"/>
    </Grid>
</Window>
